{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",

  "buildCommand": "npm --prefix frontend ci && npm --prefix frontend run build",
  "outputDirectory": "frontend/dist",

  "functions": {
    "api/**/*.py": {
      "runtime": "python@3.11"
    }
  },

  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
